<%= form_with model: @user, class: "new-user-form" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>
  
  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code %>
  <%= f.number_field :zip_code %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password, value: nil %>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation, value: nil %>

  <%= f.submit "Create Account" %>
<% end %>
